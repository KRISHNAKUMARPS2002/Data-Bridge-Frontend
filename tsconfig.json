{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, // ❌ Disable strict type checking
    "noImplicitAny": false, // ✅ Ignore missing type annotations
    "noImplicitReturns": false, // ✅ Allow functions to return `any`
    "noImplicitThis": false, // ✅ Ignore `this` errors
    "strictNullChecks": false, // ✅ Allow `null` and `undefined` freely
    "noUncheckedIndexedAccess": false, // ✅ Prevent object index type issues
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
